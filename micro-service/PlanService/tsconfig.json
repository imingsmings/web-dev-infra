{
  "compilerOptions": {
    "target": "ESNext",                           
    "jsx": "react",                              
    "experimentalDecorators": true,               
    "module": "ESNext",                          
    "moduleResolution": "Node",                   
    "baseUrl": "../",                              
    "resolveJsonModule": true,                   
    // "declaration": true,                          
    "outDir": "./",                           
    // "declarationDir": "./",                       
    "esModuleInterop": true,                      
    "strict": true,      
    "allowSyntheticDefaultImports": true,
    "paths": {
      "BaseRequest": ["BaseService/src/api/request"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
